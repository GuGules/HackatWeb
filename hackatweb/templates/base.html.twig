<!DOCTYPE html>
<html data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{asset('icons/hackathon.png')}}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>       
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}

        {% block nav %}
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">&nbsp;&nbsp;&nbsp;&nbsp;
    <a class="navbar-brand" href="{{path('app_home')}}"><img src="{{asset('images/hackathon.png')}}" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">&nbsp; HackatAgence</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item"><a class="nav-link" href="{{path('app_hackathons')}}">Nos Hackathons</a></li>
            <li class="nav-item"><a class="nav-link" href="#projects">Nos Ateliers</a></li>
            <li class="nav-item"><a class="nav-link" href="#projects">Nos Conférences</a></li>
            <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
            {% if not is_granted('IS_AUTHENTICATED_FULLY')%}
            <li class="nav-item"><a class="nav-link" href="{{path('app_register')}}">Créer mon compte</a></li>
            <li class="nav-item"><a class="nav-link" href="{{path('app_login')}}">Se connecter</a></li>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                {{ app.user.getPrenom() }} {{ app.user.getNom() }}
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="{{path('app_shFav')}}">Mes hackathons favoris</a></li>
                <li><a class="dropdown-item" href="{{path('app_myRegHackathon')}}">Mes inscriptions</a></li>
                <li><hr class="dropdown-divider"></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a></li>
              </ul>
            </li>
             
            {% endif %}
            
        </ul>
    </div>
</nav>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
